@model ders_kayit_sistemi.Models.Admin
@{
	ViewData["Title"] = "Home Page";
}
@{
	Layout = null;
}
<!DOCTYPE html>
<html>

<head>
	<title>XYZ Teknoloji Üniversitesi</title>


	<link rel="stylesheet" href="~/css/login.css" />
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/jquery/dist/jquery.min.js" />

	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide|Sofia|Trirong">
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<body>
	<div class="row d-flex justify-content-center align-items-center box">

		<div class="col-md-6 d-flex justify-content-center align-items-center">


			<div class="row">
				<div class="col-12 d-flex justify-content-center align-items-center">
					<img src="~/images/logo_photo_transparent.png" class="logo_photo">
				</div>

				<div class="col-12 d-flex justify-content-center align-items-center mt-4">
					<p class="isim">XYZ Teknoloji Üniversitesi</p>
				</div>
			</div>

		</div>
		@using (Html.BeginForm("AuthenticationAdmin", "Login", FormMethod.Post))
		{
			<div class="col-md-6- pl-5">
				<div class="row">
					<div class="col-lg-2">@Html.LabelFor(a => a.Id, new { @class="Login" })</div>
					<br>
				</div>

				<div class="row">
						<div class="col-lg-10">@Html.TextBoxFor(a => a.Id, new { @class = "form-control" })</div>
				</div>

				<div class="row">
					<div class="col-lg-2">@Html.LabelFor(a => a.Sifre , new { @class="Login" })</div>
					<br>
				</div>

				<div class="row d-flex align-items-center justify-content-between">
					<div class="col-lg-10">@Html.TextBoxFor(a => a.Sifre, new { @class = "form-control", type = "Password", id="pwd" })</div>
					<button class="material-icons visibility i button2"
							onclick="myFunction()">
							visibility_off
					</button>
				</div>
				
				<div class="row">
					<div class="col">
						<button class="button1" asp-action="Authentication">Giriş</button>
					</div>
				</div>
			</div>
		}
	</div>

	<script>
		function myFunction() {
			var x = document.getElementById("pwd");
			if (x.type === "password") {
				x.type = "text";
			} else {
				x.type = "password";
			}
		}
	</script>

	<script>
		const visibilityToggle = document.querySelector('.visibility');

		const input = document.querySelector('.input-container input');

		var password = true;

		visibilityToggle.addEventListener('click', function() {
			if (password) {
				visibilityToggle.innerHTML = 'visibility';
			} else {
				visibilityToggle.innerHTML = 'visibility_off';
			}
			password = !password;

		});
	</script>
</body>

</html>